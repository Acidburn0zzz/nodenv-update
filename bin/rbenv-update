#!/usr/bin/env bash
# Usage: rbenv update [--noop|--verbose|--quiet]
# Summary: Updates to latest version of rbenv and plugins from git.
set -e
[ -n "$RBENV_DEBUG" ] && set -x

# Parse command line flags
noop=""
verbose=""
quiet=""
while [ $# -gt 0 ]; do
  case "$1" in
  --noop ) noop=true ;;
  --verbose ) verbose=true ;;
  --quiet | --silent ) quiet=true ;;
  esac
  shift 1
done

# Set colored output for TTY
if [ -t 1 ]; then
  color="\e[1;32m"
  reset="\e[0m"
else
  color=""
  reset=""
fi

# Helper functions
pretty_output() {
  if [ -n "$verbose" ]; then
    while read -r data; do
      printf " ${color}|${reset}  %s\n" "$data"
    done
  else
    cat >/dev/null 2>&1
  fi
}

print_colored() {
  if [ -z "$quiet" ]; then
    printf "${color}%s${reset}\n" "$1"
  fi
}

git() {
  if [ -n "$noop" ]; then
    echo git "$@"
  else
    command git "$@" 2>&1 | pretty_output
  fi
}

is_rbenv_git_repo() {
  command git remote -v 2>/dev/null | grep -q 'rbenv\|ruby-build'
}

rbenv_update() {
  if is_rbenv_git_repo; then
    print_colored "Updating $1"
    git pull --no-rebase --ff 2>&1
  else
    print_colored "Skipping $1 since it's not an rbenv git repo"
  fi
}

# Main script
if [ -n "$noop" ] && [ -n "$quiet" ]; then
  quiet=""
  print_colored "Both --noop and --quiet given, ignoring --quiet" >&2
fi

cd "$(dirname "$(which rbenv)")"
rbenv_update rbenv

shopt -s nullglob
for plugin in "$RBENV_ROOT"/plugins/*; do
  pushd "$plugin" >/dev/null
  rbenv_update "$(basename "$plugin")"
  popd >/dev/null
done
shopt -u nullglob
